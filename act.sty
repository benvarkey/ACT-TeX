\newcommand{\mult}{\raisebox{-.3\height}{\texttt{*}}}
\newcommand{\tildett}{\texttt{\char`\~}}

% Text formatting shorthands
\newcommand{\codett}[1]{\texttt{#1}}
\newcommand{\substt}[2]{\texttt{#1}$_{\texttt{#2}}$}

